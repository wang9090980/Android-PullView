            android:contentDescription="@string/app_name"
            android:src="@drawable/image_4"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name"
            android:src="@drawable/image_5"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
