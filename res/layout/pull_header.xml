<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <TextView
        android:id="@+id/text_pullHeader_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:minWidth="120dp"
        android:layout_marginLeft="16dp"
        android:text="@string/hint_pullToRefresh"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/image_pullHeader_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_pull_down"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/text_pullHeader_hint" 
        android:contentDescription="@string/app_name" />
    
    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:id="@+id/progressBar_pullHeader_progress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/text_pullHeader_hint"
        android:visibility="gone"/>
</RelativeLayout>